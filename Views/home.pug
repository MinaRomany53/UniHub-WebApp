block content
  // Start Landing Section
  section.landing
    .container
      .landing--slider
        .landing--slide.fade
          img.img(src='./imgs/Landing-Slider/1.jpg' alt='tour-img')
        .landing--slide.fade
          img.img(src='./imgs/Landing-Slider/2.jpg' alt='tour-img')
        .landing--slide.fade
          img.img(src='./imgs/Landing-Slider/3.jpg' alt='tour-img')
        .landing--slide.fade
          img.img(src='./imgs/Landing-Slider/4.jpg' alt='tour-img')
        .landing--slide.fade
          img.img(src='./imgs/Landing-Slider/5.jpg' alt='tour-img')
  // End Landing Section

  // Start items Example Section
  section.items_example
    .container
      .section-heading(style='  margin-bottom: 1rem;')
        img.svg(src='./imgs/sec-1.svg' alt='svg')
        h2 Discover All Classifieds
      .blocks__container
        .block
          .block__content
            h3 Books
            a.view__more-btn(href='/search?category=Books')
              | View more 
              i.fa-solid.fa-angles-right.icon
          .cards.block__cards
           each item in Books
            .card
              a.body(href='item.html')
                img.img(src='./imgs/default.jpg' alt=`${item.title}`)
                .box-1-4
                  .location
                    i.fa-solid.fa-location-dot.icon
                    |  #{item.city}
                  .price EGP #{item.price.toLocaleString("en-EG")}
                    - const diffDays = Math.floor(Math.abs(new Date() - item.createAt) / (1000 * 60 * 60 * 24));
                    - let createAt = `${diffDays} days ago`
                    - if(diffDays == 0) createAt= `Today`
                  .createAt= createAt
                .box-2-4
                  h3.title #{item.title}
                  p.desc
                    | #{item.description.substring(0,120)}...
                a.btn.details-btn(href='#') More Details          
